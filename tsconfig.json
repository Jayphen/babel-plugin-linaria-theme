{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES5", "ES6"],
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src"]
}
